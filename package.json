{
  "name": "@storyhunt/sdk",
  "author": "StoryHunt Team",
  "description": "StoryHunt SDK for interacting with storyhunt contracts",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "tests"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xstoryhunt/sdk.git"
  },
  "scripts": {
    "test": "npm run ts-check && npm run test-jest",
    "test-jest": "jest --passWithNoTests --updateSnapshot --coverage --detectOpenHandles",
    "build": "npm run ts-check && npm run build-lib && npm run build-tests",
    "build-lib": "tsup --config ./tsup.config.lib.ts",
    "test-esm": "node --experimental-vm-modules ./node_modules/.bin/jest --verbose",
    "build-tests": "tsup --config ./tsup.config.tests.ts",
    "ts-check": "tsc --noEmit",
    "prettier-format": "prettier --write --no-error-on-unmatched-pattern \"./**/*\"",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "size": "size-limit",
    "prepare": "npm run build-lib"
  },
  "keywords": [
    "storyhunt",
    "dex",
    "sdk",
    "blockchain"
  ],
  "devDependencies": {
    "@tanstack/query-core": "^5.62.7",
    "@tanstack/react-query": "^5.62.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@ethersproject/address": "^5.7.0",
    "@ethersproject/solidity": "^5.7.0",
    "@uniswap/sdk-core": "^6.1.0",
    "@uniswap/v3-sdk": "^3.19.0",
    "@wagmi/core": "^2.6.5",
    "jsbi": "^3.2.5",
    "urql": "^4.2.1",
    "viem": "^2.7.15",
    "wagmi": "^2.12.25"
  }
}
